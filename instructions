vcftools --vcf WithDupes.vcf --remove bads.tab --max-missing 0.25 --min-alleles 2 --max-alleles 2 --recode-INFO-all --recode --out filt

cat filt.recode.vcf | perl -pe 's/NS=/AF=0.5;NS=/'| perl -pe 's/\tGT/;\tGT/' >filtaf.vcf

perl ~/GoogleDrive/Chapter2/2bRAD_denovo/thinner.pl vcf=filtaf.vcf interval=2000 criterion=maxDP > thinned.vcf

